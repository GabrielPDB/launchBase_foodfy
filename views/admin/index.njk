{% extends "admin/layout.njk" %}

{% block content %}

    <div class="container">
        <div class="admin-header">
            <h2>Gerenciar receitas</h2>
            <div class="options">
                <a href="/admin/recipes/create" class="button">Nova receita</a>
            </div>
        </div>

        <section class="recipes">

            {# Aqui entra um for com as receitas depois #}

            {% for recipe in recipes %}
                <div class="recipe-admin">
                    <div class="card-image">
                        <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
                    </div>
                    <div class="card-content">
                        <div class="card-name">
                            <h3>{{recipe.title}}</h3>
                        </div>
                        <div class="card-author">
                            <h4>
                                por
                                {{recipe.author}}
                            </h4>
                        </div>
                        <div class="card-button">
                            <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </section>
    </div>

{% endblock content %}