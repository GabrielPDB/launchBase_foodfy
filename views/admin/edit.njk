{% extends "admin/layout.njk" %}

{% block content %}
    <div class="container">
        <div class="admin-header">
            <h2 class="admin">Editando receita</h2>
            <div class="options">

                <form id="form-delete" method="post" action="/admin/recipes?_method=DELETE">
                    <input type="hidden" name="id" value="{{recipe.id}}">

                    <button type="submit" id="button-delete" class="button">Deletar</button>
                </form>

                <form method="POST" action="/admin/recipes?_method=PUT">

                    <input type="hidden" name="id" value="{{ recipe.id }}">
                    <button type="submit" class="button">Salvar receita</button>
                </div>
            </div>

            {% include "admin/fields.njk" %}
        </form>
    </div>
{% endblock content %}