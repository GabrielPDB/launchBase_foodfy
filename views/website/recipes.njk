{% extends "website/layout.njk" %}

{% block content %}

    <div class="wrapper">
        <div class="cards">

            {% for recipe in recipes %}

                <div class="card" id="{{ recipes.indexOf(recipe) }}">
                    <div class="card-image">
                        <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
                    </div>
                    <div class="card-content">
                        <div class="card-name">
                            <h3>{{recipe.title}}</h3>
                        </div>
                        <div class="card-author">
                            <h4>
                                por
                                {{recipe.author}}
                            </h4>
                        </div>
                    </div>
                </div>

            {% endfor %}

        </div>
    </div>

    {% include "website/footer.njk" %}

{% endblock %}